@model IEnumerable<ELearningPlatform.Models.Course>

@{
    ViewData["Title"] = "My Courses";
}

<div class="my-courses-wrapper py-5" style="background: #f5f7fa; min-height: 100vh;">
    <!-- Header -->
    <div class="container text-center mb-4">
        <h1 class="fw-bold display-4 text-primary">@ViewData["Title"]</h1>
        <hr class="mx-auto mt-2" style="border-top: 3px solid #007bff; width: 120px;">
    </div>

    <div class="container">
        <!-- Create Button -->
        <div class="mb-4 text-end">
            <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                <i class="bi bi-plus-circle me-2"></i> Create New Course
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <p class="text-secondary fs-5">You have not created any courses yet.</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var course in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card shadow-sm rounded-4 h-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-semibold text-primary">@course.Title</h5>
                                <p class="card-text text-secondary flex-grow-1">
                                    @course.Description
                                </p>
                                <p class="mb-3">
                                    <span class="badge @(course.IsApproved ? "bg-success" : "bg-warning text-dark")">
                                        @(course.IsApproved ? "Approved" : "Pending Approval")
                                    </span>
                                </p>
                                <div class="mt-auto d-flex justify-content-between">
                                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-warning btn-sm rounded-pill shadow-sm">
                                        <i class="bi bi-pencil-square me-1"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-info btn-sm rounded-pill shadow-sm">
                                        <i class="bi bi-info-circle me-1"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger btn-sm rounded-pill shadow-sm">
                                        <i class="bi bi-trash-fill me-1"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    /* Typography */
    .my-courses-wrapper h1 {
        letter-spacing: 0.5px;
    }

    /* Cards */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.08);
        }

    /* Buttons */
    .btn-primary {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        border: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(0, 123, 255, 0.35);
        }

    .btn-warning {
        background: linear-gradient(135deg, #ffc107, #ffdb4d);
        border: none;
        color: #212529;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(255, 193, 7, 0.35);
        }

    .btn-info {
        background: linear-gradient(135deg, #17a2b8, #5bc0de);
        border: none;
        font-weight: 600;
        color: #fff;
        transition: all 0.3s ease;
    }

        .btn-info:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(23, 162, 184, 0.35);
        }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545, #ff5c67);
        border: none;
        font-weight: 600;
        color: #fff;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(220, 53, 69, 0.35);
        }

    /* Badges */
    .badge {
        font-size: 0.85rem;
        padding: 0.4em 0.7em;
    }

    /* Responsive Card Body */
    .card-text {
        font-size: 0.95rem;
    }
</style>
