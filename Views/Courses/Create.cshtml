@model ELearningPlatform.ViewModels.CourseViewModel

@{
    ViewData["Title"] = "Create Course";
}

<div class="create-course-wrapper py-5" style="background: #f5f7fa; min-height: 100vh;">
    <div class="container">
        <!-- Page Header -->
        <div class="text-center mb-5">
            <h1 class="fw-bold display-4 text-primary">Create a New Course</h1>
            <p class="text-muted fs-5">Fill in the details below to add a course to your platform.</p>
            <hr class="mx-auto mt-3" style="border-top: 3px solid #007bff; width: 100px;">
        </div>

        <!-- Form Card -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg rounded-5 p-5 bg-white border-0">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Title -->
                        <div class="form-group mb-4">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control form-control-lg shadow-sm" placeholder="Enter course title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control form-control-lg shadow-sm" rows="5" placeholder="Enter a brief course description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="form-group d-flex justify-content-between">
                            <input type="submit" value="Create Course" class="btn btn-primary btn-lg rounded-pill shadow-sm" />
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill shadow-sm">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Typography */
    .create-course-wrapper h1 {
        letter-spacing: 1px;
    }

    .create-course-wrapper p {
        color: #6c757d;
    }

    /* Form Card */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px rgba(0, 123, 255, 0.15);
        }

    /* Form Controls */
    .form-control {
        border-radius: 12px;
        border: 1px solid #ced4da;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
            outline: none;
        }

    /* Buttons */
    .btn-primary {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        border: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(0, 123, 255, 0.35);
        }

    .btn-outline-secondary {
        border-width: 2px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background: #6c757d;
            color: #fff;
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(108, 117, 125, 0.25);
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}