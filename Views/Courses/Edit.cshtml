@model ELearningPlatform.ViewModels.CourseViewModel

@{
    ViewData["Title"] = "Edit Course";
}

<div class="edit-course-wrapper py-4" style="background: #eef2f7; min-height: 100vh;">
    <!-- Page Header -->
    <div class="container mb-4 text-center">
        <h1 class="fw-bold display-5 text-primary">Edit Course</h1>
        <h4 class="text-muted mt-2">@Model.Title</h4>
        <hr class="mx-auto mt-3" style="border-top: 3px solid #00c6ff; width: 100px;">
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <!-- Card Form -->
                <div class="card rounded-4 shadow-sm border-0 p-4" style="background: #ffffff;">
                    <div class="card-header mb-3 text-center" style="background: linear-gradient(135deg,#007bff,#00c6ff); border-radius: 15px; padding: 15px;">
                        <h3 class="text-white fw-bold m-0">Course Details</h3>
                    </div>

                    <form asp-action="Edit">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="Id" />

                        <!-- Title Input -->
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">Course Title</label>
                            <input asp-for="Title" class="form-control form-control-lg rounded-pill shadow-sm border-light px-3 py-2" />
                            <span asp-validation-for="Title" class="text-danger mt-1 d-block"></span>
                        </div>

                        <!-- Description Input -->
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">Course Description</label>
                            <textarea asp-for="Description" class="form-control form-control-lg rounded-3 shadow-sm border-light px-3 py-2" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger mt-1 d-block"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-center mt-3">
                            <input type="submit" value="Save Changes" class="btn btn-primary btn-lg rounded-pill shadow-sm me-2 px-4 py-2" />
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill shadow-sm px-4 py-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Typography */
    .edit-course-wrapper h1, h3 {
        letter-spacing: 0.5px;
        font-weight: 700;
        font-size: 1.8rem;
    }

    .edit-course-wrapper h4 {
        color: #6c757d;
        font-size: 1rem;
        margin-bottom: 15px;
    }

    /* Card Shadow & Hover */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.07);
        }

    /* Form Inputs */
    .form-control {
        transition: all 0.3s ease;
        font-size: 0.95rem;
        padding: 0.4rem 0.75rem;
    }

        .form-control:focus {
            border-color: #00c6ff;
            box-shadow: 0 0 8px rgba(0, 198, 255, 0.2);
            outline: none;
        }

    /* Buttons */
    .btn-primary {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        border: none;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 198, 255, 0.3);
        }

    .btn-outline-secondary {
        border-width: 2px;
        font-weight: 500;
        font-size: 0.95rem;
        color: #6c757d;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background: #6c757d;
            color: #fff;
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(108, 117, 125, 0.25);
        }

    /* Labels */
    .form-label {
        font-size: 0.95rem;
        color: #495057;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
