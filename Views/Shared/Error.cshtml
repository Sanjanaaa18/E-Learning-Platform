@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="error-page-wrapper d-flex align-items-center justify-content-center" style="min-height: 100vh; background: linear-gradient(135deg, #f5f7fa, #dfe9f3);">
    <div class="container">
        <div class="card shadow-lg rounded-4 p-5 mx-auto" style="max-width: 700px; background: rgba(255,255,255,0.95);">
            <div class="text-center mb-4">
                <i class="bi bi-exclamation-triangle-fill text-danger fs-1 mb-3"></i>
                <h1 class="display-5 text-danger fw-bold">Oops! Something went wrong.</h1>
                <h2 class="h5 text-secondary">An error occurred while processing your request.</h2>
            </div>

            @if (Model.ShowRequestId)
            {
                <div class="alert alert-warning d-flex align-items-center">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    <div>
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </div>
                </div>
            }

            <hr class="my-4">

            <div>
                <h4 class="fw-semibold text-primary mb-2">Development Mode</h4>
                <p class="text-secondary mb-2">
                    Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
                </p>
                <p class="text-secondary mb-0">
                    <strong>Warning:</strong> The Development environment shouldn't be enabled for deployed applications.
                    It can display sensitive information to end users. For local debugging, set
                    <strong>ASPNETCORE_ENVIRONMENT</strong> to <strong>Development</strong> and restart the app.
                </p>
            </div>

            <div class="text-center mt-4">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-gradient btn-lg">
                    <i class="bi bi-house-door-fill me-2"></i> Go to Home
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-gradient {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        color: #fff;
        font-weight: 600;
        border: none;
        border-radius: 25px;
        padding: 10px 25px;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(0, 123, 255, 0.35);
        }

    .card {
        transition: transform 0.35s ease, box-shadow 0.35s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        }

    .error-page-wrapper h1, .error-page-wrapper h2, .error-page-wrapper h4 {
        letter-spacing: 0.5px;
    }

    .error-page-wrapper p {
        line-height: 1.6;
    }
</style>
