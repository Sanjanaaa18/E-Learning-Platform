@using Microsoft.AspNetCore.Identity
@using ELearningPlatform.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello, @UserManager.GetUserName(User)!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                  method="post">
                <button type="submit" class="btn btn-danger logout-btn">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item mx-1">
            <a class="btn register-btn" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item mx-1">
            <a class="btn login-btn" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>