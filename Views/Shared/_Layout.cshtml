@using Microsoft.AspNetCore.Identity
@using ELearningPlatform.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Learning Platform</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ELearningPlatform.styles.css" asp-append-version="true" />

    <style>
        /* Global Body */
        body {
            padding-top: 80px;
            background: linear-gradient(to bottom, #f5f7fa, #e0f0ff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(90deg, #001f4d, #003366);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

            .navbar .navbar-brand {
                font-weight: 700;
                font-size: 1.4rem;
                color: #ffcc00;
            }

            .navbar .nav-link {
                transition: 0.3s ease;
                font-weight: 500;
            }

                .navbar .nav-link:hover {
                    color: #ffdd66 !important;
                    transform: scale(1.05);
                }

        .navbar-toggler {
            border: none;
        }

        /* Footer */
        footer {
            background: linear-gradient(90deg, #001f4d, #003366);
            color: #fff;
            padding: 15px 0;
            font-size: 0.9rem;
        }

            footer a {
                color: #ffcc00;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        /* Main */
        main {
            min-height: 80vh;
        }

        /* Cards */
        .card {
            border-radius: 1rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-6px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.15);
            }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(135deg, #00c6ff, #007bff);
            color: #fff;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-2px) scale(1.05);
                box-shadow: 0 8px 20px rgba(0,123,255,0.4);
            }

        .btn-outline-secondary {
            border-width: 2px;
            font-weight: 500;
            color: #6c757d;
            transition: all 0.3s ease;
        }

            .btn-outline-secondary:hover {
                background: #6c757d;
                color: #fff;
                transform: translateY(-1px);
                box-shadow: 0 4px 10px rgba(108, 117, 125, 0.25);
            }

        /* Footer small text */
        footer small {
            display: block;
            opacity: 0.85;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <header class="fixed-top">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard-fill me-1"></i> E-Learning
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i> Home
                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-shield-lock-fill me-1"></i> Admin
                                    </a>
                                </li>
                            }
                            if (User.IsInRole("Instructor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Courses" asp-action="Index">
                                        <i class="bi bi-journal-text me-1"></i> My Courses
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Catalog" asp-action="Index">
                                        <i class="bi bi-collection-play me-1"></i> Course Catalog
                                    </a>
                                </li>
                            }
                            if (User.IsInRole("Student"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Learning" asp-action="Index">
                                        <i class="bi bi-book-half me-1"></i> My Learning
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Catalog" asp-action="Index">
                                        <i class="bi bi-collection-play me-1"></i> Course Catalog
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center fixed-bottom">
        <div class="container">
            <small>
                &copy; @DateTime.Now.Year - <strong>E-Learning Platform</strong> |
                <a asp-area="" asp-controller="Home" asp-action="Privacy">By STUDIO EDITORS</a>
            </small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
