@model IEnumerable<ELearningPlatform.Models.Course>

@{
    ViewData["Title"] = "Course Catalog";
}

<h1>@ViewData["Title"]</h1>
<p>Browse our collection of high-quality courses.</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <h6 class="card-subtitle mb-2 text-muted">By @(item.Instructor?.UserName ?? "N/A")</h6>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <div class="mt-auto">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>