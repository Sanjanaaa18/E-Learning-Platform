@model IEnumerable<ELearningPlatform.Models.Course>

@{
    ViewData["Title"] = "Course Catalog";
}

<div class="catalog-page-wrapper py-5" style="background: #f5f7fa; min-height: 100vh;">
    <!-- Header -->
    <div class="container text-center mb-5">
        <h1 class="fw-bold display-4 text-primary">@ViewData["Title"]</h1>
        <p class="text-muted fs-5">Explore our curated collection of high-quality courses and enhance your skills today!</p>
        <hr class="mx-auto mt-3" style="border-top: 3px solid #007bff; width: 120px;">
    </div>

    <!-- Courses Grid -->
    <div class="container">
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-lg rounded-4 border-0 course-card">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-primary">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <h6 class="card-subtitle mb-3 text-muted">By <span class="fw-semibold">@item.Instructor?.UserName</span></h6>
                            <p class="card-text text-secondary flex-grow-1">@Html.DisplayFor(modelItem => item.Description)</p>
                            <div class="mt-3 text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                                    <i class="bi bi-eye me-2"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Page Typography */
    .catalog-page-wrapper h1 {
        letter-spacing: 1px;
        margin-bottom: 10px;
    }

    .catalog-page-wrapper p {
        line-height: 1.6;
        color: #6c757d;
    }

    /* Course Card */
    .course-card {
        background: #ffffff;
        transition: transform 0.35s ease, box-shadow 0.35s ease;
    }

        .course-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 25px rgba(0, 123, 255, 0.2);
        }

    .card-title {
        font-size: 1.35rem;
        margin-bottom: 0.5rem;
    }

    .card-subtitle {
        font-size: 0.95rem;
    }

    .card-text {
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }

    /* Buttons */
    .btn-primary {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        border: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(0, 123, 255, 0.35);
        }

    /* Card hover effect */
    .card:hover .card-title {
        color: #0056b3;
    }

    /* Grid spacing */
    .row.g-4 > [class*='col-'] {
        display: flex;
    }

        .row.g-4 > [class*='col-'] .card {
            flex: 1;
            display: flex;
            flex-direction: column;
        }
</style>
