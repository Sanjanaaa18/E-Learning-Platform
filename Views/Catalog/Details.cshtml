@model ELearningPlatform.Models.Course

@{
    ViewData["Title"] = Model.Title;
}

<div class="course-page-wrapper py-5" style="background: #f8fafc; min-height: 100vh;">
    <!-- Header -->
    <div class="container mb-5 text-center">
        <h1 class="fw-bold display-4 text-primary">@Model.Title</h1>
        <h5 class="text-muted">Taught by <span class="fw-semibold">@Model.Instructor?.UserName"</span></h5>
        <hr class="mt-3 mx-auto" style="border-top: 4px solid #007bff; width: 120px;">
    </div>

    <!-- Description & Enroll -->
    <div class="container mb-5">
        <div class="card shadow-lg rounded-5 p-5 bg-white border-0">
            <h4 class="fw-bold mb-3 text-primary">Course Description</h4>
            <p class="text-secondary fs-5">@Model.Description</p>

            <div class="mt-4 text-center">
                @if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
                {
                    if ((bool)ViewData["IsEnrolled"])
                    {
                        <a href="#" class="btn btn-success btn-lg rounded-pill shadow-sm disabled">
                            <i class="bi bi-check-circle me-2"></i> You are enrolled
                        </a>
                    }
                    else
                    {
                        <form asp-action="Enroll" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="courseId" value="@Model.Id" />
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                                <i class="bi bi-journal-plus me-2"></i> Enroll Now
                            </button>
                        </form>
                    }
                }
                else if (!User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-primary btn-lg rounded-pill shadow-sm"
                       asp-area="Identity" asp-page="/Account/Login"
                       asp-route-returnUrl="@Url.Action("Details", "Catalog", new { id = Model.Id })">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Login to Enroll
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Course Modules -->
    <div class="container mb-5">
        <h3 class="fw-bold text-primary mb-4">Course Content</h3>
        <div class="accordion" id="courseModules">
            @foreach (var module in Model.Modules.OrderBy(m => m.Id))
            {
                <div class="accordion-item mb-3 shadow-sm rounded-4 border-0">
                    <h2 class="accordion-header" id="heading_@module.Id">
                        <button class="accordion-button collapsed fw-semibold py-3 fs-5 d-flex align-items-center justify-content-between"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapse_@module.Id"
                                aria-expanded="false"
                                aria-controls="collapse_@module.Id">
                            <span>
                                <i class="bi bi-folder-fill me-3 text-primary fs-4"></i> @module.Title
                            </span>
                            @* <span class="badge bg-primary rounded-pill">
                                @module.Lessons.Count() Lessons
                            </span> *@
                        </button>
                    </h2>
                    <div id="collapse_@module.Id" class="accordion-collapse collapse" aria-labelledby="heading_@module.Id" data-bs-parent="#courseModules">
                        <div class="accordion-body">
                            <ul class="list-group list-group-flush">
                                @foreach (var lesson in module.Lessons.OrderBy(l => l.Id))
                                {
                                    <li class="list-group-item d-flex align-items-center justify-content-between py-2">
                                        <div>
                                            <i class="bi bi-play-circle-fill me-3 text-primary fs-5"></i> @lesson.Title
                                        </div>
                                        <span class="badge bg-success rounded-pill">New</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Back Button -->
    <div class="container text-center mb-5">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill shadow-sm">
            <i class="bi bi-arrow-left-circle me-2"></i> Back to Catalog
        </a>
    </div>
</div>

<style>
    /* Typography */
    .course-page-wrapper h1, h3, h4, h5 {
        line-height: 1.3;
        letter-spacing: 0.5px;
    }

    .accordion-button {
        border-radius: 12px;
        background: #e3f5ff;
        font-size: 1.1rem;
        color: #007bff;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .accordion-button:focus {
            box-shadow: none;
        }

        .accordion-button:not(.collapsed) {
            background: #007bff;
            color: #fff;
        }

        .accordion-button .badge {
            font-size: 0.85rem;
            padding: 0.4em 0.7em;
            background: rgba(255,255,255,0.3);
        }

    .list-group-item {
        border-radius: 8px;
        margin-bottom: 5px;
        transition: all 0.3s ease;
        cursor: pointer;
        font-size: 1rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

        .list-group-item:hover {
            background: #e0f7ff;
            transform: translateX(6px);
            box-shadow: 0 4px 10px rgba(0,123,255,0.15);
        }

    /* Buttons */
    .btn-primary {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        border: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(0, 123, 255, 0.35);
        }

    .btn-success {
        background: linear-gradient(135deg, #28a745, #5cd65c);
        border: none;
        font-weight: 600;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(40, 167, 69, 0.35);
        }

    .btn-outline-secondary {
        border-width: 2px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background: #6c757d;
            color: #fff;
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(108, 117, 125, 0.25);
        }

    /* Card Hover */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.08);
        }

    /* Badges */
    .badge-success {
        font-weight: 500;
        font-size: 0.85rem;
        padding: 0.35em 0.6em;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .accordion-button

    {
        font-size: 1rem;
    }

    .list-group-item {
        font-size: 0.95rem;
    }

    .btn-lg {
        font-size: 1rem;
        padding: 0.7rem 1.4rem;
    }

    }
</style>
