@model IEnumerable<ELearningPlatform.Models.Course>

@{
    ViewData["Title"] = "Manage Courses";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Instructor ID</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)  // renamed item -> course for clarity
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.InstructorId</td>
                <td>
                    @if (course.IsApproved)
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Pending</span>
                    }
                </td>
                <td>
                    @if (!course.IsApproved)
                    {
                        <!-- Approve button -->
                        <form asp-action="ApproveCourse" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="courseId" value="@course.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Approve</button>
                        </form>

                        <!-- Deny/Delete button -->
                        <form asp-action="DenyCourse" method="post" style="display:inline; margin-left:5px;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="courseId" value="@course.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Deny</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index">Back to Dashboard</a>
