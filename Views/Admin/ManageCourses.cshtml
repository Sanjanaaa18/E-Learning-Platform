@model IEnumerable<ELearningPlatform.Models.Course>

@{
    ViewData["Title"] = "Manage Courses";
}

<div class="container-fluid py-5">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-gradient">
            <i class="bi bi-journal-check me-2"></i> @ViewData["Title"]
        </h1>
        <p class="text-muted">Approve or deny submitted courses with ease.</p>
    </div>

    <!-- Courses Table -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Instructor</th>
                            <th scope="col">Status</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr class="table-row-hover">
                                <td class="fw-semibold">@course.Title</td>
                                <td>
                                    <span class="badge bg-primary-subtle text-primary px-3 py-2">
                                        <i class="bi bi-person-circle me-1"></i>@course.InstructorId
                                    </span>
                                </td>
                                <td>
                                    @if (course.IsApproved)
                                    {
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="bi bi-check-circle-fill me-1"></i> Approved
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark px-3 py-2">
                                            <i class="bi bi-hourglass-split me-1"></i> Pending
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!course.IsApproved)
                                    {
                                        <form asp-action="ApproveCourse" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="courseId" value="@course.Id" />
                                            <button type="submit" class="btn btn-sm btn-success rounded-pill px-3">
                                                <i class="bi bi-check2-circle me-1"></i> Approve
                                            </button>
                                        </form>

                                        <form asp-action="DenyCourse" method="post" class="d-inline ms-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="courseId" value="@course.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger rounded-pill px-3">
                                                <i class="bi bi-x-circle me-1"></i> Deny
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No action required</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>
</div>

<style>
    .text-gradient {
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .table-row-hover:hover {
        background: #f8f9fa;
        transition: 0.3s;
    }
</style>
