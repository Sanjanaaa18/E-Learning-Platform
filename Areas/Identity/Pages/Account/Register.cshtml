@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-wrapper d-flex align-items-center justify-content-center" style="min-height: 100vh; background: linear-gradient(135deg, #f5f7fa, #dfe9f3);">
    <div class="card shadow-lg rounded-4 p-5" style="max-width: 900px; width: 100%; background: rgba(255,255,255,0.95);">
        <div class="row g-4">
            <!-- Local Registration Form -->
            <div class="col-md-6">
                <h2 class="fw-bold text-primary mb-3">Create a New Account</h2>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control form-control-lg rounded-pill shadow-sm" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control form-control-lg rounded-pill shadow-sm" autocomplete="new-password" placeholder="Password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg rounded-pill shadow-sm" autocomplete="new-password" placeholder="Confirm Password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="btn btn-gradient btn-lg w-100 rounded-pill mb-3">Register</button>

                    <div class="text-center">
                        <p class="mb-0 small text-secondary">
                            Already have an account?
                            <a asp-page="./Login" class="text-primary fw-semibold text-decoration-underline">Login</a>
                        </p>
                    </div>
                </form>
            </div>

            <!-- External Registration Section -->
            <div class="col-md-6">
                <h3 class="fw-bold text-secondary mb-3">Use another service to register</h3>
                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p class="text-muted">
                        No external authentication services are configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="text-primary">this guide</a> to enable external login providers.
                    </p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex flex-column gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-primary btn-lg rounded-pill" name="provider" value="@provider.Name">
                                Register with @provider.DisplayName
                            </button>
                        }
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* Gradient Button */
    .btn-gradient {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        color: #fff;
        font-weight: 600;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(0,123,255,0.35);
        }

    /* Card Hover Effect */
    .card {
        transition: transform 0.35s ease, box-shadow 0.35s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        }

    /* Form Inputs */
    .form-control, .form-select {
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #00c6ff;
            box-shadow: 0 0 5px rgba(0,198,255,0.5);
        }

    /* Typography */
    .register-wrapper h2, .register-wrapper h3 {
        letter-spacing: 0.5px;
    }

    .register-wrapper p {
        line-height: 1.5;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
